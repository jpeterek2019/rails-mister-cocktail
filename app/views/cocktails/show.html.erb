
<div class='banner'>

  <div class="container">
    <h1 class='mt-3'><%=   @cocktail.name  %></h1>

  </div class="container">
</div>


<div class="container">

  <div>
    <p><%= link_to "Go back to overview page", root_path %></p>

    <div class="card p-3">
      <p>INGREDIENTS:</p>

      <div class="d-flex justify-content-between mb-1">
        <% @cocktail.doses.each do |dose| %>
        <%= dose.description %>
        <%= dose.ingredient.name %>
        <%= link_to "ðŸ—‘", dose_path, method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>

    <div class="card p-3">
      <p >REVIEWS:</p>

      <div class="d-flex justify-content-between mb-1">

        <% @cocktail.reviews.each do |review| %>
        <p> <%="*" * (review.rating) %></p>
        <p> <%=review.content %></p>

        <%= link_to "ðŸ—‘", review_path(review), method: :delete, data: {confirm: "Are you sure?"} %>
        <% end %>
      </div>
    </div>

    <div>
      <h2>Add a new ingredient or review</h2>

      <div class="container">
        <div class= 'd-flex justify-content-between'>
          <div class="row">

            <div class="col-5 p-3 m-2" style="width: 18rem;">
              <p>Add a new ingredient to your <%= @cocktail.name %></p>
              <div >
                <p><%=  simple_form_for [@cocktail, @dose] do |f| %></p>
                <p><%= f.input :description %></p>
                <p> <%= f.association :ingredient, input_html: { class: 'select2' } %></p>
                <%= f.submit "add a dose", class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>


            <div class="col-5 p-3 m-2" style="width: 18rem;">
              <div>
                <p>Add a new review for your <%= @cocktail.name %></p>

                <div >
                  <p><%=  simple_form_for [@cocktail, @review] do |f| %></p>
                  <p><%= f.input :content %></p>
                  <p><%= f.input :rating %></p>
                  <%= f.submit "add a review", class: "btn btn-primary" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
